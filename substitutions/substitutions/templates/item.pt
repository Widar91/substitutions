<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Item Page</title>
    <link href="${request.static_url('substitutions:static/theme.css')}" rel="stylesheet">
  </head>

  <body>
    <!-- Item --> 
    <div>
        <div>${ item.title }</div>
        <div>${ item.url }</div>
        <div>${ item.id }</div>
    </div>

    <!-- Substitution List --> 
    <div tal:repeat="item substitutions">
        <div>${ item.title }</div>
        <div>${ item.url }</div>
        <div>${ item.id }</div>
    </div>
  </body>
</html>
